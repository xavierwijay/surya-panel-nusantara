---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import BrandLogo from "../components/header/BrandLogo.astro";
import DesktopNavbar from "../components/header/DesktopNavbar.astro";
import MobileMenu from "../components/header/MobileMenu.astro";
import FloatingSocial from "../components/header/FloatingSocial.astro";
import Footer from "../components/sections/Footer.astro";
import { PROJECTS } from "../data/portfolio";
import { SITE } from "../data/site";

const title = "Portfolio - Surya Panel Nusantara";
const description = "Lihat proyek unggulan kami di seluruh Indonesia. Instalasi panel surya berkualitas untuk rumah, bisnis, dan industri.";
---

<BaseLayout title={title} description={description}>
  <!-- Header layer -->
  <BrandLogo />
  <DesktopNavbar />
  <MobileMenu />

  <main class="bg-[#3e4a30] min-h-screen text-white pt-12 md:pt-32 pb-20">
    
    <!-- Header Title -->
    <div class="text-center mb-16 px-6" data-aos="fade-down">
        <h2 class="text-white/90 text-sm md:text-base font-medium tracking-widest uppercase mb-2 font-display">
            SURYA NUSANTARA
        </h2>
        <h1 class="text-4xl md:text-6xl font-bold uppercase tracking-wide font-display text-white">
            proyek unggulan kami
        </h1>
    </div>

    <!-- Projects List -->
    <div class="max-w-6xl mx-auto px-6 flex flex-col gap-12 pb-12">
      {PROJECTS.map((project, index) => (
        <div 
          class="project-card relative group w-full h-[300px] md:h-[500px] overflow-hidden rounded-sm shadow-xl cursor-pointer isolate" 
          data-aos="fade-up" 
          data-aos-delay={index * 100}
          tabindex="0"
        >
            <!-- Carousel Container -->
            <div class="carousel-container absolute inset-0 w-full h-full">
                <div class="flex overflow-x-auto snap-x snap-mandatory h-full w-full scrollbar-hide bg-gray-900" style="scrollbar-width: none; -ms-overflow-style: none;">
                    {(project.images || [project.image]).map((img, imgIndex) => (
                        <div class="w-full h-full flex-shrink-0 snap-center relative">
                            <Image 
                                src={img} 
                                alt={`${project.title} - Image ${imgIndex + 1}`}
                                class="w-full h-full object-cover"
                                draggable="false"
                                width={1200}
                                quality={80}
                            />
                        </div>
                    ))}
                </div>
                
                <!-- Carousel Indicators (Dots) -->
                {(project.images && project.images.length > 1) && (
                    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex gap-2 z-20 pointer-events-none transition-opacity duration-300 group-[.active]:opacity-0">
                        {project.images.map((_, i) => (
                            <div class={`w-1.5 h-1.5 rounded-full bg-white/50 backdrop-blur-sm shadow-sm carousel-dot-${index}-${i}`}></div>
                        ))}
                    </div>
                )}
                
                <!-- Desktop Navigation Arrows -->
                {(project.images && project.images.length > 1) && (
                    <>
                        <button class="nav-arrow prev-btn hidden md:flex absolute left-4 top-1/2 -translate-y-1/2 z-20 w-10 h-10 items-center justify-center rounded-full bg-black/30 hover:bg-black/50 text-white backdrop-blur-sm transition-all duration-300 group-[.active]:opacity-0 hover:scale-110 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                            </svg>
                        </button>
                        <button class="nav-arrow next-btn hidden md:flex absolute right-4 top-1/2 -translate-y-1/2 z-20 w-10 h-10 items-center justify-center rounded-full bg-black/30 hover:bg-black/50 text-white backdrop-blur-sm transition-all duration-300 group-[.active]:opacity-0 hover:scale-110 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                        </button>
                    </>
                )}
            </div>
            
            <!-- Default Overlay (Title) -->
            <div class="absolute inset-0 bg-black/20 group-[.active]:opacity-0 transition-opacity duration-300 flex items-center justify-center pointer-events-none">
                 <h3 class="text-2xl md:text-5xl font-bold text-white uppercase tracking-wider drop-shadow-xl text-center px-4 font-display">
                    {project.title} - {project.location}
                </h3>
            </div>

            <!-- Detail Overlay (Active Only) -->
            <div class="absolute inset-0 bg-spn-dark/80 opacity-0 group-[.active]:opacity-100 transition-opacity duration-500 flex flex-col items-center justify-center text-center px-4 md:px-8 z-10 pointer-events-none group-[.active]:pointer-events-auto">
                 <div class="transform translate-y-8 group-[.active]:translate-y-0 transition-transform duration-500 delay-75">
                    <span class="text-spn-gold text-xs md:text-sm font-bold tracking-[0.2em] uppercase mb-1 md:mb-4 block">Detail Proyek</span>
                    <h3 class="text-2xl md:text-5xl font-bold text-white uppercase tracking-wide font-display mb-1 md:mb-2">
                        {project.title}
                    </h3>
                    <p class="text-spn-rust font-bold text-base md:text-lg mb-2 md:mb-6">{project.location}</p>
                 </div>
                 
                 <div class="w-16 h-1 bg-spn-gold mb-3 md:mb-8 transform scale-x-0 group-[.active]:scale-x-100 transition-transform duration-500 delay-150"></div>

                 <div class="grid grid-cols-2 md:grid-cols-3 gap-x-4 md:gap-x-8 gap-y-2 md:gap-y-4 text-left max-w-2xl transform translate-y-8 group-[.active]:translate-y-0 transition-transform duration-500 delay-200">
                    <div>
                        <p class="text-gray-400 text-[10px] md:text-xs uppercase tracking-wider mb-1">Tipe</p>
                        <p class="text-white text-sm md:text-base font-medium">{project.type || "Solar Installation"}</p>
                    </div>
                    <div>
                        <p class="text-gray-400 text-[10px] md:text-xs uppercase tracking-wider mb-1">Kapasitas</p>
                        <p class="text-white text-sm md:text-base font-medium">{project.capacity || "N/A"}</p>
                    </div>
                     <div>
                        <p class="text-gray-400 text-[10px] md:text-xs uppercase tracking-wider mb-1">Tahun</p>
                        <p class="text-white text-sm md:text-base font-medium">{project.year || "2024"}</p>
                    </div>
                 </div>
                 
                 <p class="mt-3 md:mt-8 text-gray-300 max-w-lg leading-relaxed text-xs md:text-base transform translate-y-8 group-[.active]:translate-y-0 transition-transform duration-500 delay-300 line-clamp-3 md:line-clamp-none">
                    {project.description}
                 </p>
            </div>
        </div>
      ))}
    </div>

    <script is:inline>
        let carouselIntervals = [];

        // Use inline script to handle interactivity directly
        document.addEventListener('astro:page-load', () => {
            setupCards();
        });
        
        // Also run on initial load if not using view transitions or for fallback
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', setupCards);
        } else {
            // Check if we are already running to avoid double setup if specific events fire rapidly
            // But simple call is usually fine with cleanup.
            setupCards();
        }

        function setupCards() {
            // Cleanup existing intervals
            carouselIntervals.forEach(clearInterval);
            carouselIntervals = [];

            const cards = document.querySelectorAll('.project-card');
            
            cards.forEach((card, index) => {
                // Click interaction (Toggles Details)
                card.addEventListener('click', (e) => {
                    // Toggle 'active' class
                    const wasActive = card.classList.contains('active');
                    
                    // Close all others
                    cards.forEach(c => c.classList.remove('active'));
                    
                    // Only open if it wasn't already active
                    if (!wasActive) {
                        card.classList.add('active');
                    } else {
                         card.classList.remove('active');
                    }
                });

                // Carousel Logic
                const carousel = card.querySelector('.overflow-x-auto');
                const carouselContainer = card.querySelector('.carousel-container');

                if (carousel && carouselContainer) {
                   // --- Arrow Navigation Logic ---
                   const prevBtn = card.querySelector('.prev-btn');
                   const nextBtn = card.querySelector('.next-btn');
                   
                   const scrollCarousel = (direction) => {
                       const width = carousel.clientWidth;
                       const currentScroll = carousel.scrollLeft;
                       // Determine target
                       let nextScroll;
                       if (direction === 'next') {
                            nextScroll = currentScroll + width;
                            // Reset to 0 if at end?
                            if (nextScroll >= carousel.scrollWidth - 10) nextScroll = 0;
                       } else {
                            nextScroll = currentScroll - width;
                            // Loop to end if at start?
                            if (nextScroll < 0) nextScroll = carousel.scrollWidth - width;
                       }
                       
                       carousel.scrollTo({
                           left: nextScroll,
                           behavior: 'smooth'
                       });
                   };

                   if (prevBtn) {
                       prevBtn.addEventListener('click', (e) => {
                           e.stopPropagation(); // Don't trigger card detail click
                           e.preventDefault();
                           scrollCarousel('prev');
                           // Optional: reset interval?
                       });
                   }

                   if (nextBtn) {
                        nextBtn.addEventListener('click', (e) => {
                           e.stopPropagation();
                           e.preventDefault();
                           scrollCarousel('next');
                       });
                   }

                   // --- Auto-scroll Logic ---
                   // Randomize start delay slightly to avoid all moving in perfect sync
                   const delay = 3500 + (Math.random() * 1000); 
                   
                   const interval = setInterval(() => {
                       // Pause if active (details shown) or user is hovering (handled by logic below mostly, but good check)
                       if (card.classList.contains('active') || card.matches(':hover')) return;

                       // Don't auto-scroll if user is currently interacting (dragging)
                       // Re-declare isDown check here using closure or scope if needed, 
                       // but strictly speaking we defined 'isDown' later in the function.
                       // Ideally we scope it properly. 
                       // Let's rely on the fact the user isn't hovering? 
                       // If hovering, we return. Dragging implies hovering. So this check is covered by `card.matches(':hover')`.
                       // Wait, if I drag, I am hovering. 
                       // So checking :hover is sufficient to pause auto-scroll during drag.

                       const width = carousel.clientWidth;
                       const currentScroll = carousel.scrollLeft;
                       const maxScroll = carousel.scrollWidth - width;

                       let nextScroll = currentScroll + width;
                       
                       // Loop back to start if we are at the end (with small tolerance)
                       if (currentScroll >= maxScroll - 10) {
                           nextScroll = 0;
                       }

                       carousel.scrollTo({
                           left: nextScroll,
                           behavior: 'smooth'
                       });
                   }, delay);

                   carouselIntervals.push(interval);

                   // --- Drag to Scroll & Click Prevention Logic ---
                   let isDown = false;
                   let startX;
                   let scrollLeft;
                   let isDragging = false;

                   carouselContainer.addEventListener('mousedown', (e) => {
                       // Ignore if click is on buttons
                       if (e.target.closest('button')) return; 

                       isDown = true;
                       isDragging = false; // Reset drag status
                       // Get X position relative to the slider
                       startX = e.pageX - carouselContainer.offsetLeft;
                       scrollLeft = carousel.scrollLeft;
                       carousel.style.cursor = 'grabbing';
                   });

                   carouselContainer.addEventListener('mouseleave', () => {
                       isDown = false;
                       carousel.style.cursor = 'grab';
                   });

                   carouselContainer.addEventListener('mouseup', () => {
                       isDown = false;
                       carousel.style.cursor = 'grab';
                   });

                   carouselContainer.addEventListener('mousemove', (e) => {
                       if (!isDown) return;
                       e.preventDefault(); // Prevent text selection etc
                       
                       const x = e.pageX - carouselContainer.offsetLeft;
                       const walk = (x - startX) * 2; // Scroll-fast multiplier
                       
                       // Detect legitimate drag (ignore micro-movements)
                       if (Math.abs(walk) > 5) {
                           isDragging = true;
                       }

                       carousel.scrollLeft = scrollLeft - walk;
                   });

                   // Stop the parent 'click' event if we were dragging
                   // The carouselContainer is inside the card.
                   // Events bubble: carouselContainer -> card
                   // So we catch it here first.
                   carouselContainer.addEventListener('click', (e) => {
                       if (isDragging) {
                           // It was a drag, not a click!
                           e.stopPropagation();
                           e.preventDefault();
                           // Reset flag
                           isDragging = false; 
                       }
                   });
                   
                   // Initial Cursor
                   carousel.style.cursor = 'grab';
                }
            });
        }
    </script>
    
    <style>
        /* Hide scrollbar for Chrome, Safari and Opera */
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        .scrollbar-hide {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }
    </style>
    


    <!-- CTA Section -->
    <section class="pb-12 px-6 text-center" data-aos="fade-up">
        <div class="max-w-[1104px] mx-auto bg-spn-rust/10 border border-spn-rust/20 rounded-2xl p-8 md:p-12 relative overflow-hidden">
             <!-- Background Decors -->
            <div class="absolute -top-12 -left-12 w-32 h-32 bg-spn-gold/10 rounded-full blur-3xl"></div>
            <div class="absolute -bottom-12 -right-12 w-32 h-32 bg-spn-rust/10 rounded-full blur-3xl"></div>

            <h3 class="relative text-2xl md:text-3xl font-bold font-display text-white mb-4">
                Tertarik untuk memulai perjalanan energi terbarukan Anda?
            </h3>
            <p class="relative text-white/80 leading-relaxed mb-8 max-w-2xl mx-auto">
                Konsultasikan dengan para ahli kami untuk menemukan solusi energi terbarukan terbaik sesuai kebutuhan Anda. Kami siap membantu Anda di setiap langkah.
            </p>
             <a 
                href={SITE.whatsappUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="relative inline-flex items-center gap-3 bg-green-600 text-white font-bold uppercase tracking-wider py-4 px-10 rounded-full hover:bg-green-700 transition-all shadow-lg hover:shadow-green-900/50 transform hover:-translate-y-1 group"
            >
                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                Chat via WhatsApp
            </a>
        </div>
    </section>

  </main>

  <Footer />

  <!-- Floating UI -->
  <FloatingSocial />
</BaseLayout>

<style>
    /* Navigation Arrows: Visibility Logic */
    /* Default: Visible (for touch devices/iPad) assuming they meet the 'md' breakpoint */
    .nav-arrow {
        opacity: 1;
    }

    /* For devices that support hover (Desktop): Hide by default, show on hover */
    @media (hover: hover) {
        .nav-arrow {
            opacity: 0;
        }
        /* When card (group) is hovered */
        .group:hover .nav-arrow {
            opacity: 1;
        }
    }
</style>
