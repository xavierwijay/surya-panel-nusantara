		<script>
			import AOS from "aos";
			AOS.init({
				duration: 800,
				easing: 'ease-out-cubic',
				once: true,
				offset: 50
			});

			const btn = document.getElementById('mobile-menu-btn');
			const menu = document.getElementById('mobile-menu');
			const links = document.querySelectorAll('.mobile-link');
			let isOpen = false;

			if (btn && menu) {
				btn.addEventListener('click', () => {
					isOpen = !isOpen;
					if (isOpen) {
						menu.classList.remove('translate-x-full');
						// Change icon to X
						btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>`;
						document.body.style.overflow = 'hidden'; // Prevent scrolling
					} else {
						menu.classList.add('translate-x-full');
						// Change icon back to hamburger
						btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" /></svg>`;
						document.body.style.overflow = 'auto'; // Re-enable scrolling
					}
				});

				links.forEach(link => {
					link.addEventListener('click', () => {
						isOpen = false;
						menu.classList.add('translate-x-full');
						btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" /></svg>`;
						document.body.style.overflow = 'auto';
					});
				});
			}
			
			// Desktop Navbar Scroll & Logo Hide Logic
			const desktopNav = document.getElementById('desktop-navbar');
			const desktopLogo = document.querySelector('a[href="#home"].hidden.md\\:flex') as HTMLElement; // Selector for desktop logo
			let lastScrollTop = 0;

			window.addEventListener('scroll', () => {
				const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
				
				if (desktopNav) {
					if (scrollTop > lastScrollTop && scrollTop > 100) {
						// Scrolling DOWN
						desktopNav.style.transform = 'translateY(-200%)';
						if (desktopLogo) desktopLogo.style.opacity = '0';
						if (desktopLogo) desktopLogo.style.pointerEvents = 'none';
					} else {
						// Scrolling UP
						desktopNav.style.transform = 'translateY(0)';
						if (desktopLogo) desktopLogo.style.opacity = '1';
						if (desktopLogo) desktopLogo.style.pointerEvents = 'auto';
					}
				}
				lastScrollTop = scrollTop;
			});
		</script>
