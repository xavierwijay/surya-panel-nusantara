---
import BaseLayout from "../layouts/BaseLayout.astro";

import BrandLogo from "../components/header/BrandLogo.astro";
import DesktopNavbar from "../components/header/DesktopNavbar.astro";
import MobileMenu from "../components/header/MobileMenu.astro";
import FloatingSocial from "../components/header/FloatingSocial.astro";

import Hero from "../components/sections/Hero.astro";
import About from "../components/sections/About.astro";
import Services from "../components/sections/Services.astro";
import Stats from "../components/sections/Stats.astro";
import Projects from "../components/sections/Projects.astro";
import FAQ from "../components/sections/FAQ.astro";
import Testimonials from "../components/sections/Testimonials.astro";
import Footer from "../components/sections/Footer.astro";
---

<BaseLayout 
  title="Surya Panel Nusantara - Jasa Pasang Panel Surya Solo & Jawa Tengah" 
  description="Spesialis instalasi panel surya (PLTS) untuk rumah, industri, dan pertanian di Solo dan Jawa Tengah. Hemat listrik hingga 100% dengan tenaga surya berkualitas."
>
  <!-- Header layer -->
  <BrandLogo />
  <DesktopNavbar />
  <MobileMenu />

  <!-- Page sections -->
  <Hero />
  <About />
  <Services />
  <Stats />
  <Projects />
  <FAQ />
  <Testimonials />
  <Footer />

  <!-- Floating UI -->
  <FloatingSocial />
</BaseLayout>
