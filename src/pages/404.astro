---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE } from "../data/site";

const title = "404 - Halaman Tidak Ditemukan";
const description = "Maaf, halaman yang Anda cari tidak ditemukan.";
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen flex items-center justify-center bg-spn-dark text-white px-6">
    <div class="text-center max-w-lg" data-aos="fade-up">
      <h1 class="text-9xl font-display font-bold text-spn-gold mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-bold mb-6">Halaman Tidak Ditemukan</h2>
      <p class="text-gray-300 mb-8 leading-relaxed">
        Maaf, halaman yang Anda tuju mungkin telah dipindahkan atau tidak tersedia. 
        Silakan kembali ke beranda untuk informasi lebih lanjut.
      </p>
      
      <a 
        href="/" 
        class="inline-block bg-spn-gold text-spn-dark font-bold uppercase tracking-wider py-3 px-8 rounded hover:bg-white transition-colors duration-300"
      >
        Kembali ke Beranda
      </a>
    </div>
  </div>
</BaseLayout>
