---
import { NAV_LINKS, ASSETS, SITE } from "../../data/site";
---

<!-- Mobile Menu Button -->
<button
  id="mobile-menu-btn"
  class="md:hidden fixed top-6 right-6 z-[60] w-12 h-12 bg-spn-dark/80 backdrop-blur-md border border-white/30 rounded-full flex items-center justify-center text-white shadow-lg cursor-pointer hover:bg-spn-dark transition-colors"
  aria-label="Toggle Menu"
  aria-controls="mobile-menu"
  aria-expanded="false"
>
  <!-- icon injected by JS -->
</button>

<!-- Mobile Menu Backdrop -->
<div
  id="mobile-backdrop"
  class="fixed inset-0 z-40 bg-black/60 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 md:hidden"
></div>

<!-- Mobile Menu Drawer -->
<div
  id="mobile-menu"
  class="fixed inset-y-0 right-0 z-50 w-[85%] max-w-sm bg-spn-dark shadow-2xl flex flex-col translate-x-full transition-transform duration-500 ease-out-quart md:hidden border-l border-white/10"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-gradient-to-b from-spn-rust/20 to-transparent pointer-events-none"></div>

  <div class="relative z-10 flex flex-col h-full">
    <!-- Header -->
    <div class="px-8 pt-24 pb-8 flex flex-col gap-4">
      <img src={ASSETS.logoWide} alt={SITE.name} class="w-40 h-auto opacity-90" />
      <p class="text-spn-cream/60 text-xs leading-relaxed uppercase tracking-wider">
        Sustainable energy for a better future
      </p>
    </div>

    <!-- Links -->
    <div class="flex-1 px-6 overflow-y-auto">
      <nav class="flex flex-col space-y-2" aria-label="Mobile">
        {NAV_LINKS.map((l) => (
          <a
            href={l.href}
            class="mobile-link group flex items-center justify-between p-4 rounded-xl text-white hover:bg-white/5 border border-transparent hover:border-white/10 transition-all duration-300"
          >
            <span class="text-lg font-bold tracking-wide uppercase">{l.label}</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-5 h-5 text-spn-gold group-hover:translate-x-1 transition-transform"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </a>
        ))}
      </nav>
    </div>

    <!-- Footer / CTA -->
    <div class="p-8 border-t border-white/10 bg-black/20">
      <a
        href={SITE.whatsappUrl}
        target="_blank"
        rel="noopener"
        class="flex items-center justify-center gap-2 w-full bg-spn-gold text-white font-bold py-4 rounded-xl hover:bg-spn-rust transition-colors shadow-lg mobile-link"
      >
        <span>Get A Quote</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</div>
