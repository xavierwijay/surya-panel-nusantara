---
import { Image } from "astro:assets";
import { PROJECTS } from "../../data/portfolio";

const featuredProjects = PROJECTS.slice(0, 3);
---

<section id="projects" class="py-24 bg-spn-dark text-white px-6 md:px-12">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 gap-6 md:gap-0" data-aos="fade-up">
      <div>
        <h2 class="text-spn-gold text-lg font-bold uppercase tracking-widest mb-2">Portofolio Kami</h2>
        <h3 class="font-display text-white text-5xl md:text-6xl uppercase">Proyek Unggulan</h3>
      </div>
      <a href="/portfolio" class="bg-transparent border-2 border-spn-gold text-spn-gold hover:bg-spn-gold hover:text-white px-6 py-2 uppercase font-bold tracking-wider transition-all duration-300">
        Detail Portofolio
      </a>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {featuredProjects.map((project, index) => {
        // Layout logic: First item is large (left), others are wide (right)
        const isFirst = index === 0;
        const containerClasses = isFirst 
          ? "md:col-span-1 md:row-span-2" 
          : "md:col-span-2";
        
        const heightClass = isFirst ? "h-full" : "h-[240px]";
        
        return (
          <div class={`${containerClasses} group relative overflow-hidden cursor-pointer`} data-aos="fade-up" data-aos-delay={index * 100}>
            <Image
              src={project.image}
              alt={project.title}
              class={`w-full ${heightClass} object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100 ${project.imageClass || ""}`}
            />
            <div class="absolute bottom-0 left-0 w-full p-8 bg-gradient-to-t from-black/90 to-transparent translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              <h4 class="text-spn-gold text-sm font-bold uppercase tracking-widest mb-1">{project.type || "Proyek"}</h4>
              <h3 class="font-display text-3xl text-white">{project.title}</h3>
              <p class="text-white/70 text-xs mt-1 uppercase tracking-wider">{project.location}</p>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
