---
import { Image } from "astro:assets";
import { ASSETS, SITE } from "../../data/site";
import ziyadHero from "../../assets/projects/pt-ziyad/ziyad-2.jpg";
---

<section id="home" class="relative w-full h-screen overflow-hidden">
  <div class="absolute inset-0">
    <Image
      src={ziyadHero}
      alt="Proyek PLTS Atap PT Ziyad - Surya Panel Nusantara"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/60"></div>
  </div>

  <div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-4 md:pb-0">
    <div class="animate-fade-in-up flex flex-col items-center">
      <div class="mb-10 flex flex-col items-center gap-5 md:hidden">
        <img
          src={ASSETS.logoPortrait}
          alt={`${SITE.name} Logo`}
          class="w-30 md:w-32 h-auto drop-shadow-2xl filter brightness-110 hover:scale-105 transition-transform duration-700 ease-out"
        />
      </div>

      <h1 class="text-6xl md:text-8xl uppercase tracking-tighter mb-2 font-display text-white drop-shadow-lg">
        lebih mandiri bersama kami
      </h1>
      <div class="h-1 w-32 bg-spn-gold mx-auto mb-6 rounded-full"></div>
      <p class="text-2xl md:text-4xl font-light tracking-wide opacity-95 drop-shadow-md">
        HEMAT ENERGI, LINDUNGI BUMI.
      </p>

      <div class="mt-12">
        <a
          href={SITE.whatsappUrl}
          target="_blank"
          rel="noopener"
          class="bg-spn-rust hover:bg-spn-gold text-white px-8 py-3 rounded-none font-bold text-lg tracking-widest uppercase transition-colors duration-300 inline-block border-2 border-transparent hover:border-white/20"
        >
          konsultasi sekarang
        </a>
      </div>
    </div>

    <div class="mt-8 md:absolute md:bottom-10 md:left-0 md:w-full flex justify-center animate-bounce md:mt-0">
      <a href="#about" class="text-white opacity-70 hover:opacity-100 transition-opacity" aria-label="Scroll to About">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </a>
    </div>
  </div>
</section>
